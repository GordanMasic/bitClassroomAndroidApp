<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/student_picture"
        android:background="#000000"
        android:padding="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/student_fragment_student_name"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/send_message_button"
        android:layout_toStartOf="@+id/send_message_button"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/student_fragment_student_lastname"
        android:layout_below="@+id/student_fragment_student_name"
        android:layout_alignLeft="@+id/student_fragment_student_name"
        android:layout_alignStart="@+id/student_fragment_student_name" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_message_button"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_send_message"
        android:layout_alignBottom="@+id/student_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
